.modal.fade#loginModal(tabindex="-1", role="dialog", aria-labelledby="loginModalLabel", aria-hidden="true")
    .modal-dialog(role="document")
        .modal-content
            .modal-header
              h5.modal-title#loginModalLabel Login
              button(type="button", class="close", data-dismiss="modal", aria-label="Close")
                  span(aria-hidden="true") &times;
            .modal-body
              form(name="login-form", method="post")
                .form-group
                  label(for="login-email") Email address
                  input(type="email", class="form-control", id="login-email", aria-describedby="emailHelp", placeholder="Enter email")
                .form-group
                  label(for="login-pass") Password
                  input(type="password", class="form-control", id="login-pass",placeholder="Password")
                input( type="submit", id="submit-form-login", class="hidden")
            .modal-footer
              label.btn.btn-primary(for="submit-form-login", style="margin-bottom: 0;") Login
              button.btn.btn-secondary(type="button", data-dismiss="modal") Close